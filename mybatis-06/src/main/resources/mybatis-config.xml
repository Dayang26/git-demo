<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <properties resource="db.properties">

    </properties>

    <settings>
        <setting name="logImpl" value="STDOUT_LOGGING"/>
        <!--        <setting name="logImpl" value="LOG4J"/>-->
    </settings>

    <typeAliases>
        <typeAlias type="com.snow.pojo.Teacher" alias="Teacher"></typeAlias>
        <typeAlias type="com.snow.pojo.Student" alias="Student"></typeAlias>
    </typeAliases>



    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url"
                          value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>




<!--   绑定接口 -->
    <mappers>
        <mapper resource="com/snow/dao/TeacherMapper.xml"></mapper>
        <mapper resource="com/snow/dao/StudentMapper.xml"></mapper>
    </mappers>

</configuration>
